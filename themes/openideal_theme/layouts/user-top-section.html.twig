{#
/**
 * @file
 * Default theme implementation for a card basic layout.
 *
 * Available variables:
 * - content: The content for this layout.
 * - attributes: HTML attributes for the layout <div>.
 *
 * @ingroup themeable
 */
#}
<div class="layout {{ content['#main_class'] }}">
    <div {{ region_attributes.first.addClass('layout__region', 'layout__region--first', content['#main_class'] ~ '--section__first') }}>
        {{ content.first }}
        <div {{ region_attributes.second.addClass('layout__region', 'layout__region--second', content['#main_class'] ~ '--section__second') }}>
            {{ content.second }}
        </div>
    </div>

    <div {{ region_attributes.third.addClass('layout__region', 'layout__region--third', content['#main_class'] ~ '--section__third') }}>
        {{ content.third }}
    </div>
</div>
